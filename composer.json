{
    "name": "muhammed-alkhudiry/lara-helpers",
    "description": "lara-helpers",
    "keywords": [
        "muhammed-alkhudiry",
        "lara-helpers"
    ],
    "homepage": "https://github.com/muhammedalkhudiry/lara-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammed",
            "email": "muhamdkudiry@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/http": "^8.33"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "files": [
            "src/util/helpers.php"
        ],
        "psr-4": {
            "Muhammedalkhudiry\\LaraHelpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Muhammedalkhudiry\\LaraHelpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
